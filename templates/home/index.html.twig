{% extends 'base.html.twig' %}

{% block title %}Corona-vaccination | Home{% endblock %}

{% block body %}

        {# section page des centres #}
        <section class="home container-fluid mx-auto mb-5 mt-1 text-center">
                <div class="row mx-auto">

                        <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 my-0">
                                <figure class="img-fluid mx-auto">
                                        <img src="{{ asset('assets/img/stay.png') }}"
                                             alt="logo of stay home"
                                             title="logo of stay home" style="width: 200px;">
                                        <figcaption class="hidden">
                                                logo of stay home
                                        </figcaption>
                                </figure>

                                <!--trad-->
                                <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 my-0 d-flex justify-content-center align-items-center mb-3">
                                        <a href="https://www.corona-vaccination.be" target="_blank" rel="noopener noreferrer nofollow" class="btn btn-sm btn-primary mx-1 rounded col-5 col-sm-4 col-md-3 col-lg-2 col-xl-2 my-0">
                                                FRENCH
                                        </a>
                                        <a href="https://nl.corona-vaccination.be" target="_blank" rel="noopener noreferrer nofollow" class="btn btn-sm btn-primary mx-1 rounded col-5 col-sm-4 col-md-3 col-lg-2 col-xl-2 my-0">
                                                NEDERLANDS
                                        </a>
                                </div>
                                <!--trad-->
                        </div>

                        <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 mb-2">
                                <p class="mx-auto text-center text-uppercase text-black text-danger font-weight-bolder">
                                        Please note that we are not a government agency, we do not register for vaccinations!
                                </p>
                        </div>

                        <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 mb-5">
                                <h3 class="mx-auto text-center text-uppercase text-black ">
                                        LIST OF <strong>vaccination centres</strong> in <strong>Belgium</strong>
                                </h3>
                        </div>

                        <div class="row mx-auto">

                                <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 my-auto mx-auto">
                                        <div class="col-11 col-sm-11 col-md-11 col-lg-11 col-xl-7 mt-1 mx-auto text-center">

                                                <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                                                        <label for="search" class="mx-auto text-center text-uppercase text-black">
                                                                <i class="fa fa-search" aria-hidden="true"></i>
                                                                SEARCH FOR A CENTRE BY <em>CENTRE NAME</em>, <em>ZIP code</em>, <em>CITY NAME</em> or <em>NAME STREET</em>
                                                        </label>
                                                </div>
                                                <br>
                                                <div class="text-left">
                                                        {{ form(form) }}
                                                </div>
                                        </div>

                                </div>
                        </div>
                </div>

                <div class="row mx-auto mt-5">

                        {% for centre in centres %}

                                <div class="col-12 col-sm-12 col-md-6 col-lg-4 col-xl-3 mx-auto">

                                        <div class="card mx-auto mt-5" style="width: 100%;">
                                                <div class="card-body mx-auto">

                                                        <h5 class="card-title">Name : <br>
                                                                <span class="font-weight-bolder">
                                                                        {{ centre.nom | upper }}
                                                                </span>
                                                        </h5>

                                                        <p class="card-text">City : <br>
                                                                <span class="font-weight-bolder">
                                                                        {{ centre.ville | upper }}
                                                                </span></p>
                                                        <p class="card-text">Province : <br>
                                                                <span class="font-weight-bolder">
                                                                        {{ centre.province | upper }}
                                                                </span>
                                                        </p>

                                                        <p class="card-text">ZIP code : <br>
                                                                <span class="font-weight-bolder">
                                                                        {{ centre.cp }}
                                                                </span>
                                                        </p>

                                                        <a href="{{ path('centre_view', {'slug': centre.slug}) }}" class="link btn btn-block btn-outline-primary" rel="noopener noreferrer nofollow" >
                                                                See information
                                                        </a>
                                                </div>
                                        </div>

                                </div>

                        {% endfor %}

                </div>

                <div class="mx-auto my-5">
                        <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 my-5 mx-auto text-center">
                                <p class="pagination mx-auto text-center">{{ knp_pagination_render(centres) }}</p>
                        </div>
                </div>

        </section>




{% endblock %}
